#!/usr/bin/make -f
# -*- makefile -*-
# Sample debian/rules that uses debhelper.
# This file was originally written by Joey Hess and Craig Small.
# As a special exception, when this file is copied by dh-make into a
# dh-make output file, you may use that output file without restriction.
# This special exception was added by Craig Small in version 0.37 of dh-make.

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

DEST=$$(pwd)/debian/@NAME@

%:
	dh $@ --with python3

override_dh_auto_clean:
	make clean PYTHON=python3

override_dh_auto_build:
	make PYTHON=python3 OS_DIST=debian PREFIX=/usr/local

override_dh_auto_test:

override_dh_auto_install:
	make install PYTHON=python3 OS_DIST=debian PREFIX=/usr/local DESTDIR=$(DEST) PYTHON_SITELIB=/usr/local/lib/python3.12/dist-packages
	mv $(DEST)/usr/local/*  $(DEST)/usr/
	mkdir -p  $(DEST)/usr/lib/python3/
	mv $(DEST)/usr/lib/python3.12/dist-packages $(DEST)/usr/lib/python3/dist-packages
	rmdir $(DEST)/usr/local/
